<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/BaseActivityAnimations</item>
    </style>

    <style name="BaseActivityAnimations" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
        <!--task-->
        <item name="android:taskOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:taskOpenExitAnimation">@anim/fade_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_out_right</item>
        <!--task-->
        <item name="android:taskToFrontEnterAnimation">@anim/slide_in_right</item>
        <item name="android:taskToFrontExitAnimation">@anim/fade_out</item>
        <item name="android:taskToBackEnterAnimation">@anim/fade_in</item>
        <item name="android:taskToBackExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SimpleDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="ProgressDialogTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Font styles -->
    <style name="TextAppearance.Title" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.Title.Super">
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="TextAppearance.Title.Large">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextAppearance.Title.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextAppearance.Title.Normal">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Subtitle.Large">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextAppearance.Subtitle.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextAppearance.Button" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.Button.1">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.Button.2">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextAppearance.Body" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="TextAppearance.Small" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextAppearance.VerySmall" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/font_tiny</item>
    </style>

</resources>